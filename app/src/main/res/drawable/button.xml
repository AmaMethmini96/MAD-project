<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>

            <corners
                android:radius="14dp"
                />

            <gradient
                android:angle="90"
                android:startColor="#BBDEFB"
                android:centerColor="#90CAF9"
                android:endColor="#BBDEFB"
                android:type="linear"/>

            <size
                android:height="100dp"
                android:width="60dp"/>

            <stroke
                android:width="3dp"
                android:color="#424242"/>

        </shape>
    </item>
</selector>